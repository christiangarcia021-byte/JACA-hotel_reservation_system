<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="OrdersController">
    <top>
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="Your Orders" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label fx:id="customerNameLabel" style="-fx-font-weight: bold;"/>
                <Label fx:id="customerEmailLabel" style="-fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.5">
            <items>
                <VBox spacing="5" style="-fx-padding: 10;"
                      SplitPane.resizableWithParent="false">
                    <Label text="Orders"/>
                    <ListView fx:id="ordersList"/>
                </VBox>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <content>
                        <VBox fx:id="detailsBox" spacing="8" style="-fx-padding: 10;">
                        </VBox>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Close" onAction="#onClose"/>
        </HBox>
    </bottom>
</BorderPane>
