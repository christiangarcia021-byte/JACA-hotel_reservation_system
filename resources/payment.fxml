<?xml version="1.0" encoding = "UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"  fx:controller="PaymentController">
    <center>
        <HBox spacing="20" alignment="TOP_LEFT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

        <VBox spacing="10" prefWidth="350">
            <Label text = "Payment Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label text ="Card Number"/>
            <TextField fx:id="cardNumberTextField" promptText="1234 5678 9012 3456"/>

            <Label text="Expiry (MM/YY)"/>
            <TextField fx:id="expiryField" promptText="MM/YY"/>

            <Label text = "CW"/>
            <PasswordField fx:id="cvvField" promptText="***"/>

            <Button fx:id="confirmButton"
                    text="Confirm Payment"
                    onAction="#onConfirmPayment"
                    maxWidth="Infinity"/>
        </VBox>
        <Separator orientation="VERTICAL"/>

        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Reservation Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
                <content>
                    <Label fx:id="reservationSummarylabel" wrapText="true"/>
                </content>
            </ScrollPane>
        </VBox>
        </HBox>
    </center>
</BorderPane>