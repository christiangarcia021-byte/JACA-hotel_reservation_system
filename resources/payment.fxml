<?xml version="1.0" encoding = "UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="reservation.PaymentController">
    <center>
        <VBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text = "Payment Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label fx:id="reservationSummaryLabel" text="Reservation: (set from code) "/>

            <Label text ="Card Number"/>
            <TextField fx:id="cardNumberField" promptText="1234 5678 9012 3456"/>

            <Label text="Expiry (MM/YY)"/>
            <TextField fx:id="expiryField" promptText="MM/YY"/>

            <Label text = "CW"/>
            <PasswordField fx:id="cvvField" promptText="***"/>

            <Button fx:id="confirmButton"
                    text="Confirm Payment"
                    onAction="#onConfirmPayment"
                    maxWidth="Infinity"/>
        </VBox>
    </center>
</BorderPane>